<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.appmcdrone3" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>App MC Dron 3.0</name>
    <hook type="before_prepare" src="scripts/prebuild.js" />
    <description>
        App para MC Dron hecha con Cordova/React/Firebase
    </description>
    <author email="mauricio11111@gmail.com" href="http://mauriciocruzdrones.com">
        Mauricio Cruz
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

 <platform name="android">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="phonegap-version" value="cli-7.1.0" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
